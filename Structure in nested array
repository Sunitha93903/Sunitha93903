#include<stdio.h>
struct student
{
    char name[10];
    int marks[5];
    float average;
};

void main()
{
    struct student s[3];
    for(int i=0;i<3;++i)
    {
        printf("Enter student information %d\n",i+1);
        printf("enter student name :");
        scanf("%s",s[i].name);
    }
    printf("enter marks of the students..\n");
    int sum=0;
    for(int j=0;j<5;j++)
    {
        printf("Enter marks of the students:");
        scanf("%d",&s[i].marks[j]);
        sum+=s[i].marks[j];
    }
    average = float(sum)/5.0;
}


